<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:id="@+id/comanda_layout"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/name_comanda"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:text="Name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preu_total_comanda"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/name_comanda"
        android:textColor="@color/black"
        android:textSize="18dp"
        tools:text="PreuTotal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/estado"
        android:layout_toEndOf="@id/name_comanda"
        android:layout_alignTop="@id/name_comanda"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:text="Estado">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/preu_total_comanda"
        android:layout_marginTop="10dp"
        android:background="#DAD8D8"/>

</RelativeLayout>